<article class="post" id="post-<%= post.id %>">
  <h2><%= post.title %></h2>
  <div class="meta">Posted by <%= post.user.name %> on <%= pretty_date(post.created_at) %></div>
  <div class="edit"><%= link_to "Edit Post", edit_post_path(post), class: "button" if current_user %></div>
  <div class="post-content">
    <%= post.content.html_safe %>
  </div>
</article>