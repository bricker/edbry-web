<%= form_for @user do |f| %>
	<%= check_for_errors @user %>
	<fieldset>
		<legend>Add User</legend>
		<%= render partial: "user_fields", locals: { f: f } %>
		<p>
			A password will be automatically generated and sent to the e-mail address entered above.
		</p>
	</fieldset>
	
	<fieldset>
		<%= f.submit %>
	</fieldset>
<% end %>