<%= check_for_errors page %>
<fieldset>
  <legend><%= page.new_record? ? "Add Page" : "Edit Page" %></legend>
  <ol>
  <li>
      <%= f.label :text_id, "Page Slug" %>
      <%= f.text_field :text_id, placeholder: "for the URL", disabled: !page.new_record? %>
    </li>
    <li>
      <%= f.label :title %> 
      <%= f.text_field :title %>
    </li>
  </ol>
  </fieldset>
  <fieldset>
    <ol>
      <li>
        <%= f.text_area :content, cols: nil, rows: "10" %>
      </li>
    </ol>
  </fieldset>
  <fieldset class="final">
    <ol>
      <li><%= f.submit %></li>
    </ol>
</fieldset>